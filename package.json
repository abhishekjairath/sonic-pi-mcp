{
  "name": "sonic-pi-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Sonic Pi",
  "type": "module",
  "main": "dist/server.mjs",
  "bin": {
    "sonic-pi-mcp": "./bin/cli.mjs"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc && find dist -name '*.js' -exec sh -c 'mv \"$1\" \"${1%.js}.mjs\"' _ {} \\;",
    "start": "node dist/server.mjs",
    "dev": "ts-node --esm src/server.ts",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.7.0",
    "node-osc": "^8.0.12",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/node-osc": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "sonic-pi",
    "ai",
    "llm",
    "music"
  ],
  "author": "Abhishek Jairath",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abhishekjairath/sonic-pi-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/abhishekjairath/sonic-pi-mcp/issues"
  },
  "homepage": "https://github.com/abhishekjairath/sonic-pi-mcp#readme"
}
